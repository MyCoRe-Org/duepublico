<?xml version="1.0" encoding="UTF-8"?>

<web-fragment id="WebFragment_ID" version="3.0"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">
	<display-name>DuEPublico</display-name>
	<name>duepublico</name>

	<servlet>
		<servlet-name>CascadingLoginServlet</servlet-name>
		<servlet-class>unidue.ub.duepublico.login.CascadingLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CascadingLoginServlet</servlet-name>
		<url-pattern>/servlets/CascadingLoginServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ThesisListServlet</servlet-name>
		<servlet-class>unidue.ub.duepublico.ThesisListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ThesisListServlet</servlet-name>
		<url-pattern>/servlets/ThesisListServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AliasDispatcherServlet</servlet-name>
		<servlet-class>unidue.ub.duepublico.AliasDispatcherServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AliasDispatcherServlet</servlet-name>
		<url-pattern>/go/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>StatisticsServlet</servlet-name>
		<servlet-class>unidue.ub.duepublico.statistics.StatisticsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StatisticsServlet</servlet-name>
		<url-pattern>/servlets/StatisticsServlet/*</url-pattern>
	</servlet-mapping>

</web-fragment>
